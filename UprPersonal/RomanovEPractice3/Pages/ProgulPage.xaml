<Page x:Class="RomanovEPractice3.Pages.ProgulPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RomanovEPractice3.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Проверка посешения">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Код сотрудника: " Style="{StaticResource CommonText}"></TextBlock>
                <TextBox x:Name="TbxId"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Дата для проверки: " Style="{StaticResource CommonText}"></TextBlock>
                <DatePicker Name="DtpD" SelectedDateFormat="Short"></DatePicker>
            </StackPanel>
            <StackPanel>
                <Button x:Name="BtnProverka" Content="Проверить явку" Click="BtnProverka_Click"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
