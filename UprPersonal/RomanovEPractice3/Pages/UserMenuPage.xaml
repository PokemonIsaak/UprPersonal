<Page x:Class="RomanovEPractice3.Pages.UserMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RomanovEPractice3.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Страница пользователя">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Style="{StaticResource CenterText}"
                   Width="auto"
                       Text="Вы перешли в меню пользователя">
                </TextBlock>
            </StackPanel>
            <StackPanel>
                <Button 
                HorizontalAlignment="Right"
                Content="Страница фриланса"
                Name="BtnProjectPage" Click="BtnProjectPage_Click">
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
